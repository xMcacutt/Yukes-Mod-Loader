<Window x:Class="Yukes_Mod_Loader_GUI.ModListingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window 1" Height="400" Width="600">
    <Grid>
        <ListView Name="ModList" Margin="10">
            <!-- Columns for mod info -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Game Name" DisplayMemberBinding="{Binding GameName}" Width="150"/>
                    <GridViewColumn Header="Mod Name" DisplayMemberBinding="{Binding ModName}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>